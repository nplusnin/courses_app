<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= link_to course.title, course %></td>
        <td style="width: 200px; text-align: right;">
          <% if policy(Course).edit? %>
            <%= link_to 'Edit', edit_course_path(course), class: "btn btn-xs btn-warning" %>
          <% end %>
          <% if policy(Course).destroy? %>
            <%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if policy(Course).new? %>
  <%= link_to 'New Course', new_course_path, class: "btn btn-default" %>
<% end %>