<%= link_to '<<- Back to courses', courses_path %>

<p id="notice"><%= notice %></p>

<h1><%= @course.title %></h1>

<p>
  <%= @course.body %>
</p>

<% if policy(@course).edit? %>
  <%= link_to 'Edit', edit_course_path(@course), class: "btn btn-warning" %>
<% end %>

<h2>Lessons</h2>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @course.lessons.each do |lesson| %>
      <tr>
        <td><%= link_to lesson.title, lesson %></td>
        <td style="width: 200px; text-align: right;">
          <% if policy(lesson).edit? %>
            <%= link_to 'Edit', edit_lesson_path(lesson), class: "btn btn-xs btn-warning" %>
          <% end %>
          <% if policy(lesson).destroy? %>
            <%= link_to 'Destroy', lesson, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if policy(Lesson).new? %>
  <%= link_to "Create lesson", new_course_lesson_path(@course), class: "btn btn-success" %>
<% end %>

